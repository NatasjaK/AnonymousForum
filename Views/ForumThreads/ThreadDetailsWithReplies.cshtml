@model AnonymousForum.Models.ForumThread

@{
    ViewData["Title"] = "Thread Details";
}

<h2>@Model.Title</h2>
<p>@Model.Content</p>

<h4>Replies</h4>
@if (Model.Replies.Any())
{
    foreach (var reply in Model.Replies)
    {
        <div>@reply.Content</div>
    }
}
else
{
    <p>This thread has no replies yet.</p>
}

<h4>Add a New Reply</h4>
<form asp-controller="Replies" asp-action="Create" method="post">
    <input type="hidden" name="ForumThreadId" value="@Model.ForumThreadId" />
    <div class="form-group">
        <label for="Content">Reply</label>
        <textarea class="form-control" id="Content" name="Content" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Post Reply</button>
</form>

<a asp-action="Index">Back to List</a>
